<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainController">
   <children>
      <BorderPane prefHeight="720.0" prefWidth="720.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <center>
            <HBox alignment="TOP_CENTER" fillHeight="false" prefHeight="200.0" prefWidth="200.0" spacing="100.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="beginner" mnemonicParsing="false" onAction="#beginnerButtonAction" text="Easy" />
                  <Button fx:id="intermediate" mnemonicParsing="false" onAction="#intermediateButtonAction" text="Intermediate" />
                  <Button fx:id="hard" alignment="CENTER" mnemonicParsing="false" onAction="#hardButtonAction" text="Hard" textAlignment="CENTER" />
                  <Button fx:id="perso" mnemonicParsing="false" onAction="#persoButtonAction" text="Personalized" />
               </children>
               <BorderPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </BorderPane.margin>
               <padding>
                  <Insets top="25.0" />
               </padding>
            </HBox>
         </center>
         <top>
            <Label alignment="TOP_CENTER" text="Select a difficulty" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets top="80.0" />
               </BorderPane.margin>
            </Label>
         </top>
      </BorderPane>
   </children>
</AnchorPane>
